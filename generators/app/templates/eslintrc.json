{
  "parser": "babel-eslint",
  "root": true,
  "env": {
    "browser": true
  },
  "rules": {
    "semi": ["error", "always"],
    "comma-dangle": ["error", {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "never"
    }],
    "operator-linebreak": ["error", "after"],
    "space-before-function-paren": ["error", "never"],
    "react/prop-types": ["skipUndeclared"]
  },
  "extends": ["standard", "standard-react"],
  "plugins": ["emotion"]
}
